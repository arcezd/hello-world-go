---
extends: default

rules:
  document-start: disable
  indentation:
    spaces: 2
    indent-sequences: consistent
    check-multi-line-strings: false
  line-length:
    max: 120
    allow-non-breakable-words: true
    allow-non-breakable-inline-mappings: false
  truthy:
    allowed-values: ['true', 'false']
    check-keys: false